#!/usr/bin/env bash
# Append or overwrite host config in ~/.ssh/config
cat <<EOL >> ~/.ssh/config

Host myserver
    HostName your.server.com
    User ubuntu
    IdentityFile ~/.ssh/school
    PasswordAuthentication no
EOL

# Set proper permissions
chmod +x ~/.ssh/config

echo "SSH configuration added for 'myserver'. You can now connect using: ssh myserver"
